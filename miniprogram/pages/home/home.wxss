swiper image {
    width: 100%;
    height: 130%;
   
}

.nav {
    display: flex;
    width: 100%;
    height: 300rpx;
    
    
}
.nav view {
    display: flex;
    width: 33.33%;
    /* background-color: azure; */
    /* justify-content: space-between; */
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* background-color: #fff3d0; */
   border-bottom: 8rpx solid #f3f3f3;
   box-shadow: 1rpx 1rpx 4rpx #f3f3f3;
}
.nav image {
    width: 100rpx;
    height: 100rpx;
}
.nav text{
    font-size: 30rpx;
    margin-top:10px
}
.van-dropdown-item__title{
    font-size: 30rpx;
}
.van-ellipsis{
    font-size: 30rpx;
}
.course {
   
    padding: 20rpx;
    line-height: 50rpx;
}
.course .cc {
    display: flex;
    justify-content: space-between;
}
.course .tui .yellow {
    width: 12rpx;
    height: 50rpx;
    background-color: #ffcc33;
    border-radius: 6rpx;
    margin-right: 10rpx;
}
.course .tui {
    display: flex;
}
.course .more {
    font-size: 23rpx;
    color: #c5c5c5;
}
.product {
    border: 7px solid #eee;
    width: 45%;
    height: 60%;
    float: left;
    border-radius: 5px;
  }
  .product .pic{
      height: 180px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: black;
      border-radius: 5px 5px 0 0;
  }
  
  .product .pic .image {
    width: 100%;
    border-radius: 5px 5px 0 0;

  }
  
  .product .text {
    padding: 30rpx 20rpx;
  }
  
  .product .title {
    font-size: 36rpx;
    color: #333;
    border-bottom: 1rpx solid #efefef;
    padding-bottom: 20rpx;
    margin-bottom: 10rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    overflow: hidden;
  }
  
  .product .row {
    font-size: 28rpx;
    color: #aaa;
    display: flex;
    line-height: 2em;
  }
  
  .product .row .left {
    font-size: 26rpx;
    white-space: nowrap;
  }
  
  .product .row .right {
    color: #666;
    white-space: nowrap;
    overflow:hidden;
    text-overflow: ellipsis;
    -o-text-overflow:ellipsis;
  }
  

